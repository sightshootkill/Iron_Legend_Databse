<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="35dp"
    android:weightSum="1"
    android:background="#898C90">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffcdcdcd"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ace Commander"
            android:singleLine="false"
            android:textSize="27sp"
            android:textStyle="bold|italic"
            android:textColor="#B7410E"
            android:id="@+id/abilityTitle"
            android:gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COST:"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#515151" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/prerequisiteView"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#515151" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RNG:"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#515151"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/textView3"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#515151" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AOE:"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#515151"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/textView7"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#515151" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POW:"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#515151"
                    android:id="@+id/textView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/textView11"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#515151" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UP:"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#515151"
                    android:id="@+id/textView295" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/textView297"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#515151" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFF:"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#515151"
                    android:id="@+id/textView298" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:id="@+id/textView299"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#515151" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/abilityDescriptionView"
            android:textStyle="italic"
            android:typeface="serif"
            android:text="The character gains an extra quick action during each of his turns that can only be used to drive a &apos;jack,"
            android:layout_margin="12dp"
            android:textColor="#515151" />

    </LinearLayout>

</LinearLayout>
